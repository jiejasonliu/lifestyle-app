<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <!-- profile picture container -->
    <LinearLayout
        android:id="@+id/linearLayoutPfpContainer"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:background="@drawable/dashboard_background"

        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewProfilePicture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/imageViewRounded"
            app:srcCompat="@drawable/default_pp"
            app:strokeColor="@color/orange_50"
            app:strokeWidth="1dp" />

        <Space
            android:layout_width="48dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonChangePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/changePicture"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/pfpSignupSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutPfpContainer"
        app:layout_constraintBottom_toTopOf="@id/scrollViewEditProfileSignup"/>

    <ScrollView
        android:id="@+id/scrollViewEditProfileSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pfpSignupSeparator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/fragmentEditProfileSignup"
                android:name="com.lifestyle.fragments.EditProfileFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonSubmitSignup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/finishSignup"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>